function ls_amazon_brew_tap() {
  TAP=amazon/homebrew-amazon; \
  TAP_PREFIX=$(brew --prefix)/Homebrew/Library/Taps; \
  ls $TAP_PREFIX/$TAP/Formula/*.rb 2>/dev/null || ls $TAP_PREFIX/$TAP/*.rb 2>/dev/null | \
  xargs -I{} basename {} .rbI

}

